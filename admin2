    <script>
        // Variables globales
        let imagePairs = [];
        let votes = {};
        let personNames = {};

        // Credenciales de administrador
        const ADMIN_CREDENTIALS = {
            username: 'admin',
            password: 'admin'
        };

        // Inicializaci√≥n
        document.addEventListener('DOMContentLoaded', function() {
            setupDragAndDrop();
            setupLoginEvents();
        });

        // Login como administrador
        function loginAsAdmin() {
            const username = document.getElementById('username').value.trim();
            const password = document.getElementById('password').value.trim();

            console.log('Intentando login con:', username, password); // Debug

            if (username === ADMIN_CREDENTIALS.username && password === ADMIN_CREDENTIALS.password) {
                showAdminPanel();
                loadDataFromFirebase();
                showMessage('¬°Bienvenido Administrador!', 'success');
            } else {
                console.log('Credenciales incorrectas. Esperadas:', ADMIN_CREDENTIALS); // Debug
                showMessage('Usuario o contrase√±a incorrectos.', 'error');
                document.getElementById('username').value = '';
                document.getElementById('password').value = '';
            }
        }

        // Mostrar panel de administraci√≥n
        function showAdminPanel() {
            document.getElementById('login-screen').style.display = 'none';
            document.getElementById('admin-panel').style.display = 'block';
        }

        // Cerrar sesi√≥n
        function logout() {
            document.getElementById('login-screen').style.display = 'block';
            document.getElementById('admin-panel').style.display = 'none';
            
            document.getElementById('username').value = '';
            document.getElementById('password').value = '';
            
            showMessage('Sesi√≥n cerrada correctamente.', 'success');
        }

        // Cargar datos desde Firebase
        async function loadDataFromFirebase() {
            try {
                const { ref, onValue } = window.firebaseRefs;
                
                // Cargar pares de im√°genes
                const pairsRef = ref(window.database, 'imagePairs');
                onValue(pairsRef, (snapshot) => {
                    const data = snapshot.val();
                    if (data) {
                        imagePairs = Object.values(data);
                        displayImagePairs();
                    }
                });

                // Cargar im√°genes individuales esperando pareja
                const individualRef = ref(window.database, 'individualImages');
                onValue(individualRef, (snapshot) => {
                    const data = snapshot.val();
                    displayPendingImages(data);
                });

                // Cargar nombres de personas
                const namesRef = ref(window.database, 'personNames');
                onValue(namesRef, (snapshot) => {
                    const data = snapshot.val();
                    personNames = data || {};
                    displayImagePairs();
                    displayResults();
                });

                // Cargar votos
                const votesRef = ref(window.database, 'votes');
                onValue(votesRef, (snapshot) => {
                    const data = snapshot.val();
                    votes = data || {};
                    displayResults();
                });

            } catch (error) {
                console.error('Error cargando datos:', error);
                showMessage('Error conectando con Firebase.', 'error');
            }
        }

        // Mostrar im√°genes pendientes de emparejamiento
        function displayPendingImages(pendingData) {
            if (!pendingData) return;
            
            const pendingImages = Object.values(pendingData);
            if (pendingImages.length === 0) return;
            
            // Agrupar por baseName
            const grouped = {};
            pendingImages.forEach(img => {
                if (!grouped[img.baseName]) {
                    grouped[img.baseName] = [];
                }
                grouped[img.baseName].push(img);
            });
            
            // Mostrar mensaje de im√°genes esperando pareja
            const pendingCount = Object.keys(grouped).length;
            if (pendingCount > 0) {
                const names = Object.keys(grouped).join(', ');
                showMessage(`${pendingCount} imagen(es) esperando pareja: ${names}`, 'warning');
            }
        }

        // Configurar drag and drop
        function setupDragAndDrop() {
            const uploadArea = document.getElementById('uploadArea');
            const fileInput = document.getElementById('fileInput');

            uploadArea.addEventListener('dragover', (e) => {
                e.preventDefault();
                uploadArea.classList.add('dragover');
            });

            uploadArea.addEventListener('dragleave', () => {
                uploadArea.classList.remove('dragover');
            });

            uploadArea.addEventListener('drop', (e) => {
                e.preventDefault();
                uploadArea.classList.remove('dragover');
                const files = Array.from(e.dataTransfer.files);
                handleFiles(files);
            });

            fileInput.addEventListener('change', (e) => {
                const files = Array.from(e.target.files);
                handleFiles(files);
            });
        }

        // Manejar archivos seleccionados
        function handleFiles(files) {
            // Solo permitir una imagen a la vez
            if (files.length > 1) {
                showMessage('Por favor, sube solo UNA imagen a la vez.', 'warning');
                return;
            }

            const imageFile = files[0];
            
            if (!imageFile || !imageFile.type.startsWith('image/')) {
                showMessage('Por favor, selecciona un archivo de imagen v√°lido.', 'warning');
                return;
            }

            processImageFile(imageFile);
        }

        // Procesar archivo de imagen individual
        async function processImageFile(file) {
            const fileName = file.name;
            const lastDot = fileName.lastIndexOf('.');
            const nameWithoutExt = fileName.substring(0, lastDot);
            
            // Verificar que termine en -1 o -2
            if (!nameWithoutExt.endsWith('-1') && !nameWithoutExt.endsWith('-2')) {
                showMessage('El nombre del archivo debe terminar en -1 o -2 (ej: maria-1.jpg, juan-2.png)', 'error');
                return;
            }

            showMessage('Subiendo imagen...', 'warning');
            
            try {
                const { storageRef, uploadBytes, getDownloadURL } = window.firebaseRefs;
                
                // Subir imagen a Firebase Storage
                const imageRef = storageRef(window.storage, `images/${fileName}`);
                const snapshot = await uploadBytes(imageRef, file);
                const downloadURL = await getDownloadURL(snapshot.ref);
                
                // Determinar el nombre base y el n√∫mero de imagen
                const isImage1 = nameWithoutExt.endsWith('-1');
                const baseName = nameWithoutExt.slice(0, -2);
                
                // Guardar imagen individual en Firebase
                await saveIndividualImageToFirebase(baseName, {
                    name: fileName,
                    url: downloadURL
                }, isImage1 ? 1 : 2);
                
                showMessage(`Imagen subida: ${fileName}. Esperando pareja...`, 'success');
                
            } catch (error) {
                console.error('Error subiendo imagen:', error);
                showMessage('Error subiendo imagen a Firebase.', 'error');
            }
        }

        // Guardar imagen individual y verificar si se completa el par
        async function saveIndividualImageToFirebase(baseName, imageData, imageNumber) {
            try {
                const { ref, get, set, push } = window.firebaseRefs;
                
                // Verificar si ya existe una imagen del mismo par
                const imagesRef = ref(window.database, 'individualImages');
                const snapshot = await get(imagesRef);
                const existingImages = snapshot.val() || {};
                
                // Buscar si existe la pareja
                let partnerKey = null;
                let partnerData = null;
                
                for (const [key, imageInfo] of Object.entries(existingImages)) {
                    if (imageInfo.baseName === baseName && imageInfo.imageNumber !== imageNumber) {
                        partnerKey = key;
                        partnerData = imageInfo;
                        break;
                    }
                }
                
                // Guardar la imagen actual
                const currentImageRef = push(ref(window.database, 'individualImages'));
                await set(currentImageRef, {
                    baseName: baseName,
                    imageNumber: imageNumber,
                    imageData: imageData,
                    timestamp: Date.now()
                });
                
                // Si encontramos la pareja, crear el par completo
                if (partnerData) {
                    showMessage(`¬°Par completo encontrado para "${baseName}"! Creando competencia...`, 'success');
                    
                    // Crear el par completo
                    const completePair = {
                        name: baseName,
                        image1: imageNumber === 1 ? imageData : partnerData.imageData,
                        image2: imageNumber === 2 ? imageData : partnerData.imageData,
                        createdAt: Date.now()
                    };
                    
                    // Guardar en imagePairs
                    const pairRef = push(ref(window.database, 'imagePairs'));
                    await set(pairRef, {
                        id: pairRef.key,
                        ...completePair
                    });
                    
                    // Eliminar las im√°genes individuales ya que se cre√≥ el par
                    await set(ref(window.database, `individualImages/${currentImageRef.key}`), null);
                    if (partnerKey) {
                        await set(ref(window.database, `individualImages/${partnerKey}`), null);
                    }
                    
                    // Mostrar formulario para asignar nombres
                    showPersonNamesForm([completePair]);
                } else {
                    showMessage(`Imagen "${baseName}-${imageNumber}" guardada. Esperando "${baseName}-${imageNumber === 1 ? '2' : '1'}"...`, 'warning');
                }
                
            } catch (error) {
                console.error('Error guardando imagen:', error);
                throw error;
            }
        }

        // Guardar pares de im√°genes en Firebase
        async function saveImagePairsToFirebase(newPairs) {
            try {
                const { ref, push, set } = window.firebaseRefs;
                
                for (const pair of newPairs) {
                    const pairRef = push(ref(window.database, 'imagePairs'));
                    await set(pairRef, {
                        id: pairRef.key,
                        name: pair.name,
                        image1: pair.image1,
                        image2: pair.image2,
                        createdAt: Date.now()
                    });
                }
                
            } catch (error) {
                console.error('Error guardando pares:', error);
                throw error;
            }
        }

        // Mostrar formulario para asignar nombres
        function showPersonNamesForm(newPairs) {
            const formContainer = document.createElement('div');
            formContainer.id = 'personNamesForm';
            formContainer.style.cssText = `
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0,0,0,0.8);
                display: flex;
                justify-content: center;
                align-items: center;
                z-index: 10000;
                overflow-y: auto;
            `;

            const formContent = document.createElement('div');
            formContent.style.cssText = `
                background: white;
                border-radius: 20px;
                padding: 30px;
                max-width: 600px;
                max-height: 90vh;
                overflow-y: auto;
                box-shadow: 0 10px 30px rgba(0,0,0,0.3);
                margin: 20px;
            `;

            let formHTML = `
                <h2 style="text-align: center; margin-bottom: 20px; font-weight: 600; color: #dc770e;">
                    üë• Asignar Nombres a las Personas
                </h2>
                <p style="text-align: center; margin-bottom: 30px; color: #666;">
                    Escribe el nombre de cada persona en las im√°genes
                </p>
            `;

            newPairs.forEach((pair, index) => {
                const existingNames = personNames[pair.name] || { person1: '', person2: '' };

                formHTML += `
                    <div style="border: 2px solid #eee; border-radius: 15px; padding: 20px; margin-bottom: 20px;">
                        <h3 style="text-align: center; margin-bottom: 15px; font-weight: 600;">Par: ${pair.name}</h3>
                        
                        <div style="display: flex; gap: 20px; align-items: center; justify-content: center; flex-wrap: wrap;">
                            <div style="text-align: center;">
                                <img src="${pair.image1.url}" style="width: 120px; height: 120px; object-fit: cover; border-radius: 10px; margin-bottom: 10px;">
                                <p style="font-size: 12px; color: #666; margin-bottom: 5px;">${pair.image1.name}</p>
                                <input 
                                    type="text" 
                                    id="person1_${index}" 
                                    placeholder="Nombre de la persona"
                                    value="${existingNames.person1}"
                                    style="width: 140px; padding: 8px; border: 2px solid #ddd; border-radius: 8px; font-family: 'Dosis', sans-serif; text-align: center;"
                                    required
                                >
                            </div>
                            
                            <div style="font-size: 24px; color: #dc770e; font-weight: bold;">VS</div>
                            
                            <div style="text-align: center;">
                                <img src="${pair.image2.url}" style="width: 120px; height: 120px; object-fit: cover; border-radius: 10px; margin-bottom: 10px;">
                                <p style="font-size: 12px; color: #666; margin-bottom: 5px;">${pair.image2.name}</p>
                                <input 
                                    type="text" 
                                    id="person2_${index}" 
                                    placeholder="Nombre de la persona"
                                    value="${existingNames.person2}"
                                    style="width: 140px; padding: 8px; border: 2px solid #ddd; border-radius: 8px; font-family: 'Dosis', sans-serif; text-align: center;"
                                    required
                                >
                            </div>
                        </div>
                    </div>
                `;
            });

            formHTML += `
                <div style="display: flex; gap: 15px; justify-content: center; margin-top: 30px;">
                    <button onclick="cancelPersonNames()" style="background: #ccc; color: #000; border: none; padding: 12px 25px; border-radius: 25px; cursor: pointer; font-size: 16px; font-weight: 600; font-family: 'Dosis', sans-serif;">
                        ‚ùå Cancelar
                    </button>
                    <button onclick="savePersonNamesFromForm()" style="background: #dc770e; color: white; border: none; padding: 12px 25px; border-radius: 25px; cursor: pointer; font-size: 16px; font-weight: 600; font-family: 'Dosis', sans-serif;">
                        ‚úÖ Guardar Nombres
                    </button>
                </div>
            `;

            formContent.innerHTML = formHTML;
            formContainer.appendChild(formContent);
            document.body.appendChild(formContainer);
            
            setTimeout(() => {
                const firstInput = document.getElementById('person1_0');
                if (firstInput) firstInput.focus();
            }, 100);
        }

        // Guardar nombres desde el formulario
        async function savePersonNamesFromForm() {
            const form = document.getElementById('personNamesForm');
            const person1Inputs = form.querySelectorAll('[id^="person1_"]');
            const person2Inputs = form.querySelectorAll('[id^="person2_"]');
            
            let allFieldsFilled = true;
            let savedCount = 0;
            
            const namesToSave = {};
            for (let i = 0; i < person1Inputs.length; i++) {
                const person1 = person1Inputs[i].value.trim();
                const person2 = person2Inputs[i].value.trim();
                
                if (!person1 || !person2) {
                    allFieldsFilled = false;
                    continue;
                }
                
                const pairName = imagePairs[imagePairs.length - person1Inputs.length + i]?.name;
                if (pairName) {
                    namesToSave[pairName] = {
                        person1: person1,
                        person2: person2
                    };
                    savedCount++;
                }
            }
            
            if (!allFieldsFilled) {
                showMessage('Por favor, completa todos los nombres antes de continuar.', 'warning');
                return;
            }
            
            if (savedCount === 0) {
                showMessage('No se pudieron guardar los nombres. Intenta nuevamente.', 'error');
                return;
            }
            
            try {
                const { ref, set } = window.firebaseRefs;
                for (const [pairName, names] of Object.entries(namesToSave)) {
                    const nameRef = ref(window.database, `personNames/${pairName}`);
                    await set(nameRef, names);
                }
                
                const formElement = document.getElementById('personNamesForm');
                if (formElement) formElement.remove();
                
                showMessage(`Se guardaron ${savedCount} pares con nombres correctamente.`, 'success');
                
            } catch (error) {
                console.error('Error guardando nombres:', error);
                showMessage('Error guardando nombres en Firebase.', 'error');
            }
        }

        // Cancelar asignaci√≥n de nombres
        function cancelPersonNames() {
            const formElement = document.getElementById('personNamesForm');
            if (formElement) formElement.remove();
        }

        // Mostrar pares de im√°genes
        function displayImagePairs() {
            const imageList = document.getElementById('imageList');
            imageList.innerHTML = '';

            imagePairs.forEach((pair, index) => {
                const pairDiv = document.createElement('div');
                pairDiv.className = 'image-pair';
                
                const names = personNames[pair.name] || { person1: 'Persona 1', person2: 'Persona 2' };
                
                pairDiv.innerHTML = `
                    <h4 style="text-align: center; margin-bottom: 15px; font-weight: 600;">${pair.name}</h4>
                    <div style="display: flex; gap: 10px; justify-content: center;">
                        <div style="text-align: center;">
                            <img src="${pair.image1.url}" style="width: 120px; height: 120px; object-fit: cover; border-radius: 8px;">
                            <p style="margin-top: 5px; font-size: 14px; font-weight: 600; color: #dc770e;">${names.person1}</p>
                            <p style="font-size: 12px; color: #666;">${pair.image1.name}</p>
                        </div>
                        <div style="display: flex; align-items: center; font-size: 20px; font-weight: bold; color: #dc770e;">VS</div>
                        <div style="text-align: center;">
                            <img src="${pair.image2.url}" style="width: 120px; height: 120px; object-fit: cover; border-radius: 8px;">
                            <p style="margin-top: 5px; font-size: 14px; font-weight: 600; color: #dc770e;">${names.person2}</p>
                            <p style="font-size: 12px; color: #666;">${pair.image2.name}</p>
                        </div>
                    </div>
                    <div style="display: flex; gap: 10px; margin-top: 15px;">
                        <button onclick="editPersonNames('${pair.name}', ${index})" style="flex: 1; padding: 8px; background: #fbd21d; color: #000; border: none; border-radius: 5px; cursor: pointer; font-family: 'Dosis', sans-serif; font-weight: 600;">
                            ‚úèÔ∏è Editar Nombres
                        </button>
                        <button onclick="removePair('${pair.id}')" style="flex: 1; padding: 8px; background: #ff4444; color: white; border: none; border-radius: 5px; cursor: pointer; font-family: 'Dosis', sans-serif; font-weight: 600;">
                            üóëÔ∏è Eliminar Par
                        </button>
                    </div>
                `;
                
                imageList.appendChild(pairDiv);
            });
        }

        // Editar nombres de personas
        function editPersonNames(pairName, index) {
            const pair = imagePairs.find(p => p.name === pairName);
            if (pair) showPersonNamesForm([pair]);
        }

        // Eliminar par de im√°genes
        async function removePair(pairId) {
            try {
                const { ref, set } = window.firebaseRefs;
                
                const pairRef = ref(window.database, `imagePairs/${pairId}`);
                await set(pairRef, null);
                
                showMessage('Par de im√°genes eliminado.', 'success');
                
            } catch (error) {
                console.error('Error eliminando par:', error);
                showMessage('Error eliminando par de im√°genes.', 'error');
            }
        }

        // Cambiar secci√≥n
        function showSection(section) {
            document.querySelectorAll('.section').forEach(s => s.classList.remove('active'));
            document.querySelectorAll('.nav-btn').forEach(btn => btn.classList.remove('active'));
            
            document.getElementById(section + '-section').classList.add('active');
            event.target.classList.add('active');
            
            if (section === 'results') {
                displayResults();
            } else if (section === 'upload') {
                displayImagePairs();
            }
        }

        // Mostrar resultados
        function displayResults() {
            const resultsContent = document.getElementById('resultsContent');
            
            if (imagePairs.length === 0) {
                resultsContent.innerHTML = `
